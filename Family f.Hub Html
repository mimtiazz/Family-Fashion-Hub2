                icon: "fab fa-blogger",
                colorClass: "blogger-bg",
                url: "https://draft.blogger.com/blog/post/edit/preview/2506283146276471649/8579275761633634355"
            },
            { 
                name: "Twitter/X", 
                icon: "fab fa-twitter",
                colorClass: "twitter-bg",
                url: "https://x.com/MuhammadIm966"
            },
            { 
                name: "Reddit Profile", 
                icon: "fab fa-reddit",
                colorClass: "reddit-bg",
                url: "https://www.reddit.com/user/ElectricalBreath5435/"
            }
        ];

        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            // Set current year
            document.getElementById('currentYear').textContent = new Date().getFullYear();
            
            // Load saved logo
            const savedLogo = localStorage.getItem('familyFashionHubLogo');
            if (savedLogo) {
                updateLogoDisplay(savedLogo);
                document.getElementById('logoPreview').src = savedLogo;
                document.getElementById('logoSize').textContent = 'Uploaded';
            }
            
            // Load saved thumbnail
            const savedThumbnail = localStorage.getItem('familyFashionHubThumbnail');
            if (savedThumbnail) {
                updateThumbnailDisplay(savedThumbnail);
            }
            
            // Show preview area if logo exists
            if (savedLogo) {
                document.getElementById('previewArea').style.display = 'block';
            }
            
            // Load and display social links
            renderSocialLinks();
            
            // Load footer links
            updateFooterLinks();
            
            // Initialize all AdMob ads
            initializeAds();
        });

        // Initialize AdMob ads
        function initializeAds() {
            // All ads are already initialized in HTML
            // This function can be used for additional ad controls
            console.log('AdMob ads initialized successfully!');
            
            // Show interstitial after 10 seconds
            setTimeout(function() {
                showInterstitialAd();
            }, 10000);
        }

        // Show interstitial ad
        function showInterstitialAd() {
            // Interstitial will show automatically
            console.log('Interstitial ad ready to show');
        }

        // Open file selector
        function openFileSelector() {
            const choice = confirm("What do you want to upload?\n\nClick OK for Logo (appears in header)\nClick Cancel for Thumbnail (background image)");
            
            if (choice === true) {
                uploadLogo();
            } else {
                uploadThumbnail();
            }
        }

        // Trigger LOGO upload
        function uploadLogo() {
            document.getElementById('logoUpload').click();
        }

        // Trigger THUMBNAIL upload
        function uploadThumbnail() {
            document.getElementById('thumbnailUpload').click();
        }

        // Handle LOGO upload
        function handleLogoUpload(event) {
            const file = event.target.files[0];
            if (file) {
                handleImageUpload(file, 'logo');
            }
        }

        // Handle THUMBNAIL upload
        function handleThumbnailUpload(event) {
            const file = event.target.files[0];
            if (file) {
                handleImageUpload(file, 'thumbnail');
            }
        }

        // Common function to handle image upload
        function handleImageUpload(file, type) {
            // Check file size (5MB limit)
            if (file.size > 5 * 1024 * 1024) {
                showToast('File too large! Please select image under 5MB.');
                return;
            }
            
            // Check file type
            if (!file.type.match('image.*')) {
                showToast('Please select an image file (JPG, PNG, GIF).');
                return;
            }
            
            const reader = new FileReader();
            reader.onload = function(e) {
                if (type === 'logo') {
                    // Update logo in header
                    updateLogoDisplay(e.target.result);
                    
                    // Update preview
                    document.getElementById('logoPreview').src = e.target.result;
                    document.getElementById('logoSize').textContent = formatFileSize(file.size);
                    
                    // Save to localStorage
                    localStorage.setItem('familyFashionHubLogo', e.target.result);
                    
                    showToast('âœ… Logo uploaded successfully! Appears in header.');
                    
                    // Show preview area
                    document.getElementById('previewArea').style.display = 'block';
                    
                } else if (type === 'thumbnail') {
                    // Update thumbnail display
                    updateThumbnailDisplay(e.target.result);
                    
                    // Save to localStorage
                    localStorage.setItem('familyFashionHubThumbnail', e.target.result);
                    
                    showToast('âœ… Thumbnail uploaded successfully! Appears as background.');
                }
            };
            
            reader.readAsDataURL(file);
        }

        // Format file size
        function formatFileSize(bytes) {
            if (bytes < 1024) return bytes + ' bytes';
            else if (bytes < 1048576) return (bytes / 1024).toFixed(1) + ' KB';
            else return (bytes / 1048576).toFixed(1) + ' MB';
        }

        // Update logo display in header
        function updateLogoDisplay(imageData) {
            const headerLogo = document.getElementById('headerLogo');
            const logoPlaceholder = document.getElementById('logoPlaceholder');
            
            headerLogo.src = imageData;
            headerLogo.style.display = 'block';
            logoPlaceholder.style.display = 'none';
        }

        // Update thumbnail display
        function updateThumbnailDisplay(imageData) {
            const thumbnailImage = document.getElementById('thumbnailImage');
            const thumbnailImageArea = document.getElementById('thumbnailImageArea');
            
            thumbnailImage.src = imageData;
            thumbnailImageArea.style.display = 'block';
        }

        // Render social links
        function renderSocialLinks() {
            const container = document.getElementById('socialLinksContainer');
            container.innerHTML = '';
            
            socialLinks.forEach(platform => {
                const linkElement = document.createElement('a');
                linkElement.href = platform.url;
                linkElement.target = '_blank';
                linkElement.className = 'social-link-btn';
                linkElement.innerHTML = `
                    <div class="platform-icon-large ${platform.colorClass}">
                        <i class="${platform.icon}"></i>
                    </div>
                    <div class="platform-info">
                        <div class="platform-name">${platform.name}</div>
                        <div class="platform-url">${platform.url.replace('https://', '')}</div>
                    </div>
                    <div style="color: #999; font-size: 20px;">
                        <i class="fas fa-external-link-alt"></i>
                    </div>
                `;
                container.appendChild(linkElement);
            });
        }

        // Update footer links
        function updateFooterLinks() {
            const footerLinks = document.getElementById('footerLinks');
            footerLinks.innerHTML = '';
            
            socialLinks.forEach(platform => {
                const li = document.createElement('li');
                li.innerHTML = `<a href="${platform.url}" target="_blank">${platform.name}</a>`;
                footerLinks.appendChild(li);
            });
        }

        // Save all changes
        function saveAll() {
            showToast('âœ… Everything saved! Logo and thumbnail are saved.');
            
            // Show success message
            setTimeout(() => {
                alert("SUCCESS!\n\nYour website is now fully ready with:\n1. Logo in header\n2. Thumbnail design\n3. Social media links\n4. 8 ADMOB ADS for earning money\n5. Your message to visitors\n\nAds are LIVE and earning money!");
            }, 500);
        }

        // Clear all data
        function clearAll() {
            if (confirm('Are you sure? This will remove your logo and thumbnail.')) {
                localStorage.clear();
                location.reload();
            }
        }

        // Show toast notification
        function showToast(message) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.style.display = 'block';
            
            setTimeout(() => {
                toast.style.display = 'none';
            }, 3000);
        }
    </script>
